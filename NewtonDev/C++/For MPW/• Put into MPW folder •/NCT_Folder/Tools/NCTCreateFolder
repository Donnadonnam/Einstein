if {#} == 1	set _suffix "{1}"else	Echo "### {0} Error: folder suffix parameter missing." ·· "{WorkSheet}"; 	Exit 1endset new-folder-name ""Set Exit 0set new-folder-name "`Echo -n "{{new-folder-name}}" | ¶	CoolRequest -d -t -q "Enter a folder name.¶n¶nThe name will have the suffix Ò{_suffix}Ó added.¶nThe folder will be created within Ô{NCTSources}Õ."`"Set Exit 1if "{new-folder-name}" ­ ""  if "{new-folder-name}" =~ /Å[¶"¶']Å/	Alert "Sorry, an NCT folder name may not contain either single or double quotes (¶" or ')! ¶nThe MPW Make tool can't use a makefile containing such pathnames. "	Exit 1  end  	Evaluate _new_namelen = `echo -n "{new-folder-name}{_suffix}" | count -c`	if {_new_namelen} > 31 		Alert "Sorry, a folder name must be 27 or fewer characters to allow the Ò{_suffix}Ó extension."		Exit 1	end	Set new-folder-path "{NCTSources}{new-folder-name}{_suffix}:"	if "`Exists -d "{new-folder-path}"`" == ""		NewFolder "{new-folder-path}" || ( Alert " Unable to create the folder Ò{new-folder-name}{_suffix}Ó " ; Exit 1 )	else if `files "{new-folder-path}" | count -l` != 0		  Alert "Sorry, a folder already exists with the name Ò{new-folder-name}{_suffix}Ó. Choose another name" 		  Exit 1 	endenddirectory "{new-folder-path}"unset new-folder-pathunset new-folder-name